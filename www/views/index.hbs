<h1 class="title">{{title}}</h1>
<p class="description">{{description}}</p>

<div class="switch-user-language">
  <label for="switch-user-language">🌐</label>

  <select
    name="switch-user-language"
    id="switch-user-language"
  >
    {{#select userLangCode}}
    <option value="en-US">English</option>
    <option value="es-ES">Español</option>
    <option value="ja-JP">日本語</option>
    <option value="zh-CN">中文</option>
    {{/select}}
  </select>
</div>

<div class="switch-note-language">
  <select
    name="switch-note-language"
    id="switch-note-language"
  >
    {{#select noteLangCode}}
    <option value="en-US">{{en-US}}</option>
    <option value="es-ES">{{es-ES}}</option>
    <option value="ja-JP">{{ja-JP}}</option>
    <option value="zh-CN">{{zh-CN}}</option>
    {{/select}}
  </select>
</div>

<div id="app"></div>

<noscript>
  <p class="no-js">
    The Demo requires Javascript, but you can still download the flashcards for Anki
  </p>
</noscript>

<div class="switch-note-language">
  {{download-for}}
  <a id="download" href="https://static.bpev.me/flashcards/{{userLangCode}}">
    <span>{{noteDisplayLangStr}}<span>
  </a>
</div>
