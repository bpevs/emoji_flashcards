{
  "tasks": {
    "dev": "deno run -A main.ts --dev",
    "start": "deno run -A main.ts",
    "check": "deno check main.ts && deno check scripts/generate.ts",
    "generate": "deno run -A generate.ts"
  },
  "fmt": {
    "proseWrap": "never",
    "singleQuote": true,
    "semiColons": false,
    "exclude": ["www/index.js"]
  },
  "lint": {
    "exclude": ["www/index.js"]
  },
  "test": {
    "exclude": ["www/index.js"]
  },
  "imports": {
    "std/": "https://deno.land/std@0.200.0/",
    "oak": "https://deno.land/x/oak@v11.1.0/mod.ts",
    "handlebars": "https://deno.land/x/handlebars@v0.9.0/mod.ts",
    "esbuild": "https://deno.land/x/esbuild@v0.14.51/mod.js",
    "esbuild-deno-loader": "https://deno.land/x/esbuild_deno_loader@0.8.1/mod.ts",

    "solid-js": "npm:solid-js",
    "solid-js/web": "npm:solid-js/web",
    "solidjs-use": "npm:solidjs-use",
    "motion": "npm:motion",
    "motion/solid": "npm:@motionone/solid"
  },
  "tasks": {
    "start": "deno run --allow-write --allow-net --allow-read --allow-run --allow-env --watch=main.ts,index.tsx main.ts",
    "test": "deno fmt && deno lint && deno task check",
    "build": "deno run --allow-net --allow-read --allow-run --allow-env --allow-write scripts/build.ts",
    "gen:translations": "(deno run --node-modules-dir --allow-env --allow-net --allow-write=data --allow-read scripts/generate_translations.ts) && deno fmt",
    "gen:audio": "deno run --allow-net --allow-env --allow-read --allow-write scripts/generate_audio.ts",
    "check": "deno task check:translate",
    "check:translate": "deno check scripts/generate_translations.ts",
    "check:server": "deno check scripts/main.ts",
    "check:client": "deno check scripts/public.js"
  }
}
