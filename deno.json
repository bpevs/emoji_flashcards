{
  "tasks": {
    "dev": "deno run -A main.ts --dev",
    "start": "deno run -A main.ts",
    "check": "deno check main.ts && deno check scripts/generate.ts",
    "generate": "deno run -A generate.ts"
  },
  "fmt": {
    "proseWrap": "never",
    "singleQuote": true,
    "semiColons": false,
    "exclude": ["components/markup"]
  },
  "imports": {
    "std/": "https://deno.land/std@0.200.0/"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-run --allow-env --watch=main.ts,index.tsx main.ts",
    "test": "deno fmt && deno lint && deno task check",
    "translate": "deno run --node-modules-dir --allow-env --allow-net --allow-write=data --allow-read=data,node_modules,.env,.env.defaults,.env.example scripts/generate_translations.ts",
    "build:audio": "deno run --allow-read --allow-write utilities/encode.ts",
    "check": "deno task check:translate",
    "check:translate": "deno check scripts/generate_translations.ts",
    "check:server": "deno check scripts/main.ts",
    "check:client": "deno check scripts/public.js"
  }
}
